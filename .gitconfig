[alias]
    st = status
    cb = checkout
    b  = branch
    p  = pull
    pu = push
    pp = pull -p
    c  = commit

[core]
    editor = vim
    excludesfile = ~/.gitignore
[push]
    default = matching

[user]
    name = David Paniz
    email = davidpaniz@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

